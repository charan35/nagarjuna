<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce6ff"
    tools:context=".PayrollDocuments">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/logo"
                    app:srcCompat="@mipmap/ic_launcher_foreground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta OSS"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/bellb"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
        <HorizontalScrollView
            android:id="@+id/lq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fillViewport="true"
            android:measureAllChildren="false"
            android:scrollbars="none"
            android:layout_below="@+id/toolbar"
            android:background="@color/endblue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/endblue"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:id="@+id/admin"
                    android:backgroundTint="@color/starblue"
                    android:text=" Admin ->"
                    android:textColor="#000"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/emppayroll"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/starblue"
                    android:text=" Payroll ->"
                    android:textColor="#000"
                    android:textSize="20dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:backgroundTint="@color/starblue"
                    android:text=" EmpPayroll"
                    android:textColor="#000"
                    android:textSize="20dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user"
            android:visibility="gone"
            android:textColor="#ffff"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="384dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Grid2"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payroll1"
            android:layout_below="@+id/lq"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitStart"
                android:src="@drawable/payslips"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lq">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#003d66"
                android:text="Payrolls Based On Month and Year"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/pay1"
            android:layout_below="@+id/payroll1"
            android:background="#ffcccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee ID:  "
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="0"
                android:textColor="#000000"
                android:layout_gravity="start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmpID"
                android:hint="Employee Id"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#0080ff"
                android:layout_gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay2"
            android:weightSum="3"
            android:padding="10dp"
            android:background="#b3ffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pay1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:  "
                android:gravity="start"
                android:textSize="18dp"
                android:layout_weight="0"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLastName"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#0080ff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFirstName"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#0080ff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMiddleName"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#0080ff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay3"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pay2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PaySlips"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay4"
            android:weightSum="3"
            android:background="#ccccff"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pay3">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Monthly"
                android:padding="10dp"
                android:layout_weight="1"
                android:id="@+id/monthspinner"
                android:layout_gravity="center">
            </Spinner>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Yearly"
                android:padding="10dp"
                android:layout_weight="1.8"
                android:id="@+id/yearspinner"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO"
                android:layout_weight="0.3"
                android:textSize="20dp"
                android:id="@+id/paySlips"
                android:background="#ffccff"
                android:textStyle="bold"
                android:textColor="#0066ff"
                android:padding="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay5"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pay4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Re-imbursement"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay6"
            android:weightSum="4"
            android:background="#ccccff"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/pay5">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="2"
                android:entries="@array/Expenses"
                android:id="@+id/type"
                android:layout_gravity="center">
            </Spinner>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Monthly"
                android:padding="5dp"
                android:id="@+id/remonth"
                android:layout_weight="1.3"
                android:layout_gravity="center">
            </Spinner>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/Yearly"
                android:padding="5dp"
                android:id="@+id/reyear"
                android:layout_weight="0.7"
                android:layout_gravity="center">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GO"
                android:id="@+id/reimbursement"
                android:textSize="20dp"
                android:background="#ffccff"
                android:textStyle="bold"
                android:textColor="#0066ff"
                android:padding="10dp"/>
        </LinearLayout>


    </RelativeLayout>

</ScrollView>
