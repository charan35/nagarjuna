<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg"
    tools:context=".ContactUs">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo"
                app:srcCompat="@mipmap/ic_launcher_foreground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta OSS"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/bellb"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/r1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1"
                    android:text="Contact Us"
                    android:textColor="#0099ff"
                    android:textSize="50dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv2"
                    android:textColor="#ffff"
                    app:layout_constraintTop_toBottomOf="@+id/tv1"
                    android:text="It would be great to hear from you! If you got any questions, please do not hesitate to send us a message. We are looking forward to hearing from you! We reply within 24 hours !"
                    android:textSize="20dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:layout_below="@+id/l1"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:drawableLeft="@drawable/name24dp"
                    android:background="@drawable/border_style"
                    android:inputType="text"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:hint="Name"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:background="@drawable/border_style"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:hint="Email"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff"
                    android:drawableLeft="@drawable/ic_phone"
                    android:background="@drawable/border_style"
                    android:inputType="phone"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:hint="Mobile"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment"
                    android:textColor="#ffff"
                    android:textColorHint="#ffff"
                    android:drawableLeft="@drawable/ic_comment"
                    android:background="@drawable/border_style"
                    android:inputType="textMultiLine"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:hint="Comment"/>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l3"
                android:layout_below="@+id/l2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get In Touch:"
                    android:textColor="#0099ff"
                    android:id="@+id/tv3"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/location"
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:textColor="#ffff"
                    android:text="Alta IT Solutions,\nSalanhunse,\nKaggalipura Village,\nKanakapura Main Road,\nBengaluru,\nKarnataka-560082"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:text="+91-080-28432432"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile1"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:text="+91 7337774647"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email1"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:text="infoalta@altaitsolutions.com"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/website"
                    android:drawableLeft="@drawable/ic_web"
                    android:textColor="#ffff"
                    android:layout_marginTop="10dp"
                    android:text="www.altaitsolutions.com"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l4"
                android:layout_below="@+id/l3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/fb"
                    android:layout_weight="1"
                    android:src="@drawable/fb"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/insta"
                    android:layout_weight="1"
                    android:src="@drawable/insta"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/twitter"
                    android:layout_weight="1"
                    android:src="@drawable/twitter"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/pin"
                    android:layout_weight="1"
                    android:src="@drawable/pin"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/tumblr"
                    android:layout_weight="1"
                    android:src="@drawable/tumblr"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/youtube"
                    android:layout_weight="1"
                    android:src="@drawable/youtube"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/linkedin"
                    android:layout_weight="1"
                    android:src="@drawable/linkedin"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/googleplus"
                    android:layout_weight="1"
                    android:src="@drawable/googleplus"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

